        +script("/static/bower_components/materialize/dist/js/materialize.min.js")
        +script("/static/bower_components/angular-materialize/src/angular-materialize.js")

        +style("/static/build/app.css")
        +script("/static/build/app.js")

    body(ng-cloak)
        include skeleton/skeleton.jade


